<p id="notice"><%= notice %></p>

<h1>Listing Dictionaries</h1>

<table>
  <thead>
    <tr>
      <th>Main word</th>
      <th>Pronounce</th>
      <th>Type</th>
      <th>Meaning</th>
      <th>Example</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dictionaries.each do |dictionary| %>
      <tr>
        <td><%= dictionary.main_word %></td>
        <td><%= dictionary.pronounce %></td>
        <td><%= dictionary.type %></td>
        <td><%= dictionary.meaning %></td>
        <td><%= dictionary.example %></td>
        <td><%= link_to 'Show', dictionary %></td>
        <td><%= link_to 'Edit', edit_dictionary_path(dictionary) %></td>
        <td><%= link_to 'Destroy', dictionary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

